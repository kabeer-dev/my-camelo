<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Check if the requested file or directory exists
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect all other requests to index.html
  RewriteRule ^ index.html [L]
</IfModule>
